---
layout: "base.liquid"
class: "body_no_padding"
---

<div class="flex container">
  <div class="col padding">
    {{ content }}
  </div>
  <div class="col padding">
    {% if summaryBooks.length > 0 %}
    <section>
      <h3>Книги</h3>
      <div class="row">
      {% for book in summaryBooks %}
        {% if book.link %}
        <a href="/blog/{{book.link}}"><img src="/images/books/{{book.cover}}" alt="{{ book.title }}" title="{{ book.title }}" class="book" /></a>
        {% else %}
        <img src="/images/books/{{book.cover}}" alt="{{ book.title }}" title="{{ book.title }}" class="book" />
        {% endif %}
        
      {% endfor %}
      </div>
    </section>
    {% endif %}
    {% if summaryQuotes.length > 0 %}
    <section>
      <h3>Цитаты</h3>
      <div>
      {% for quote in summaryQuotes %}<blockquote><p>{{ quote.title | newline_to_br }}</p>{% if quote.type != "book" %}<footer>— {{ quote.author }}, <cite>{% if quote.link %}<a href="/blog/{{quote.link}}">{{ quote.song }}</a>{% else %}{{ quote.song }}{% endif %}</cite></footer>{% endif %}</blockquote>{% endfor %}
      </div>
    </section>
    {% endif %}
    {% if summaryPosts.length > 0 %}
    <section>
      <h3>Посты</h3>
      <ul>
      {% for p in summaryPosts %}<li><a href="{{p.page.url}}">{{ p.data.title }}</a></li>{% endfor %}
      </ul>
    </section>
    {% endif %}
    {% if summarySeries.length > 0 %}
      <section>
        <h3>Сериалы</h3>
        <div class="row">
        {% for serie in summarySeries %}
          <img src="{{serie.image}}" alt="{{serie.title}} S{{serie.season}}" title="{{serie.title}} S{{serie.season}}" class="serie" />
        {% endfor %}
        </div>
      </section>
    {% endif %}
  </div>
</div>

<style>
  section {
    margin: 3rem 0;
  }
  section:first-of-type {
    margin-top: 0;
  }
  section:last-of-type {
    margin-bottom: 0;
  }
  .row {
    display: flex;
    flex-direction: row;
    gap: 0.5rem;
    flex-wrap: wrap;
  }
  .book {
    height: 10rem;
  }
  .serie {
    width: 3.85rem;
    border-radius: 0.25rem;
  }
</style>